<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<project default="jar">
    <target name="jar">
    	<zip destfile="../../../CraftBukkit/plugins/xTeam.jar">
            <fileset dir="" includes="*.yml"/>
    		<fileset dir="src">
    			<include name="**/*.java"/>
    			<exclude name="**/*Test*"/>
    		</fileset>
    		<fileset dir="api" casesensitive="yes">
    			<include name="**/*.java"/>
    			<exclude name="**/*Test*"/>
    		</fileset>
    		<fileset dir="bin" casesensitive="yes">
    			<include name="**/*.class"/>
    			<exclude name="**/*Test*"/>
    		</fileset>
    	</zip>
    </target>
</project>
